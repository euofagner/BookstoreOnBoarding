<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="src.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Library"
    BackgroundColor="#eaeac3"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="True">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#eaeac3" />
    </ContentPage.Behaviors>

    <Grid Margin="30" RowDefinitions="*, Auto, Auto">

        <VerticalStackLayout>
            <Label
                FontFamily="BooksellerRegularBold"
                FontSize="30"
                Text="Estante de livros"
                TextColor="#333333" />
        </VerticalStackLayout>

        <Image Source="picstore" />

        <!--<Button
            Grid.Row="2"
            Clicked="Button_Clicked"
            FontAttributes="Bold"
            Text="Abra sua biblioteca"
            TextColor="White" />-->

    </Grid>

</ContentPage>