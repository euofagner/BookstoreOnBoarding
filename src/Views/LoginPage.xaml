<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="src.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LoginPage"
    Shell.FlyoutBehavior="Disabled">

    <Grid
        Margin="30"
        RowDefinitions="Auto, Auto, Auto, Auto"
        RowSpacing="40">

        <VerticalStackLayout>
            <Label
                FontFamily="BooksellerRegularBold"
                FontSize="30"
                Text="Bem-vindo(a)," />

            <Label
                FontFamily="BooksellerRegular"
                FontSize="20"
                Text="Faça login para entrar" />
        </VerticalStackLayout>

        <Image
            Grid.Row="1"
            HeightRequest="300"
            Source="loginimage.png" />

        <VerticalStackLayout Grid.Row="2" Spacing="15">
            <Border StrokeShape="RoundRectangle 7">
                <Entry
                    Margin="15,0"
                    Keyboard="Email"
                    Placeholder="Email"
                    PlaceholderColor="#333333" />
            </Border>

            <Border StrokeShape="RoundRectangle 7">
                <Entry
                    Margin="15,0"
                    IsPassword="True"
                    Keyboard="Password"
                    Placeholder="Password"
                    PlaceholderColor="#333333" />
            </Border>

            <Label
                HorizontalTextAlignment="End"
                Text="Forgot Password?"
                VerticalTextAlignment="Start" />
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="3">
            <Button
                BackgroundColor="#ff6162"
                Clicked="Button_Clicked"
                Text="Log in" />

            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Não tem uma conta? " />
                        <Span Text="Cadastre-se" TextColor="#ff6062" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </VerticalStackLayout>
    </Grid>

</ContentPage>