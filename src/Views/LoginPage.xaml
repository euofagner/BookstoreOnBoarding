<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="src.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LoginPage"
    Shell.FlyoutBehavior="Disabled">

    <Grid
        Margin="30"
        RowDefinitions="Auto, Auto, Auto, Auto"
        RowSpacing="40">

        <VerticalStackLayout>
            <Label
                FontFamily="BooksellerRegularBold"
                FontSize="30"
                Text="Bem-vindo(a)," />

            <Label
                FontFamily="BooksellerRegular"
                FontSize="20"
                Text="FaÃ§a login para entrar" />
        </VerticalStackLayout>

        <Image Grid.Row="1" Source="loginimage.png" />

        <VerticalStackLayout Grid.Row="2" Spacing="20">
            <Border>
                <Entry
                    Margin="15,0"
                    Placeholder="Email"
                    PlaceholderColor="#333333" />
            </Border>

            <Border>
                <Entry
                    Margin="15,0"
                    IsPassword="True"
                    Keyboard="Password"
                    Placeholder="Password"
                    PlaceholderColor="#333333" />
            </Border>
        </VerticalStackLayout>

        <Button
            Grid.Row="3"
            BackgroundColor="#ff6162"
            Clicked="Button_Clicked"
            Text="Log in" />
    </Grid>

</ContentPage>