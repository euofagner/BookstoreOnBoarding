    <Grid
        Margin="30"
        RowDefinitions="Auto, Auto, Auto, Auto"
        RowSpacing="20">

        <VerticalStackLayout>
            <Label
                FontFamily="BooksellerRegularBold"
                FontSize="30"
                Text="Bem-vindo(a)," />

            <Label
                FontFamily="BooksellerRegular"
                FontSize="20"
                Text="Faça login para entrar" />
        </VerticalStackLayout>

        <Image
            Grid.Row="1"
            HeightRequest="300"
            Source="loginimage.png" />

        <VerticalStackLayout Grid.Row="2" Spacing="15">
            <Border StrokeShape="RoundRectangle 7">
                <Entry
                    Margin="15,0"
                    Keyboard="Email"
                    Placeholder="Email"
                    PlaceholderColor="{AppThemeBinding Light=#333333,
                                                       Dark=#cccccc}" />
            </Border>

            <Border StrokeShape="RoundRectangle 7">
                <Entry
                    Margin="15,0"
                    IsPassword="True"
                    Keyboard="Password"
                    Placeholder="Password"
                    PlaceholderColor="{AppThemeBinding Light=#333333,
                                                       Dark=#cccccc}" />
            </Border>

            <Grid ColumnDefinitions="Auto, Auto, *" RowDefinitions="*">
                <CheckBox Color="#ff6162" />

                <Label
                    Grid.Column="1"
                    HorizontalTextAlignment="Start"
                    Text="Manter conectado"
                    VerticalOptions="Center" />

                <Label
                    Grid.Column="2"
                    HorizontalTextAlignment="End"
                    Text="Esqueceu sua senha?"
                    VerticalOptions="Center" />
            </Grid>

        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="3" Spacing="20">
            <Button
                BackgroundColor="#ff6162"
                Clicked="Button_Clicked"
                Text="Log in"
                TextColor="White" />

            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Não tem uma conta? " />
                        <Span Text="Cadastre-se" TextColor="#ff6062" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </VerticalStackLayout>
    </Grid>

</ContentPage>