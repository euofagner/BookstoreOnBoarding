<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="src.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:src.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:src.ViewModels"
    x:DataType="vm:BookViewModel"
    BackgroundColor="#00a58d"
    Shell.NavBarIsVisible="False">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior x:Name="statusBar" StatusBarColor="#007261" />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="*, Auto">
        <CarouselView
            x:Name="CarouselView"
            HorizontalScrollBarVisibility="Never"
            IndicatorView="indicatorView"
            ItemsSource="{Binding Books}"
            Loop="False"
            PositionChanged="CarouselView_PositionChanged">
            <CarouselView.ItemTemplate>
                <DataTemplate x:DataType="model:BookModel">
                    <Grid Margin="20" RowDefinitions="*, Auto, Auto">
                        <Image Source="{Binding Image}" />
                        <Label
                            x:Name="titleLabel"
                            Grid.Row="1"
                            FontAttributes="Bold"
                            FontFamily="BooksellerRegularBold"
                            FontSize="33"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Title}"
                            TextColor="#333333" />
                        <Label
                            Grid.Row="2"
                            Margin="10"
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Description}"
                            TextColor="#1e1e1e" />
                    </Grid>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <VerticalStackLayout
            Grid.Row="1"
            Margin="20"
            Spacing="50">
            <HorizontalStackLayout HorizontalOptions="Center">
                <Grid>
                    <Button
                        x:Name="OnBoardingBtn"
                        BackgroundColor="#007261"
                        Clicked="OnBoardingBtn_Clicked"
                        CornerRadius="0"
                        FontSize="Medium"
                        HeightRequest="55"
                        TextColor="White"
                        WidthRequest="300" />

                    <Image
                        Grid.Column="1"
                        Margin="160,0,0,0"
                        Source="button_arrow.png"
                        WidthRequest="35">

                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="White" />
                        </Image.Behaviors>
                    </Image>
                </Grid>
            </HorizontalStackLayout>

            <IndicatorView
                x:Name="indicatorView"
                Grid.Row="1"
                IndicatorColor="#cccccc"
                SelectedIndicatorColor="#007261">
                <IndicatorView.IndicatorTemplate>
                    <DataTemplate>
                        <Border
                            HeightRequest="8"
                            Stroke="Transparent"
                            WidthRequest="113" />
                    </DataTemplate>
                </IndicatorView.IndicatorTemplate>
            </IndicatorView>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
